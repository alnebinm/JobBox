extends ../layouts/master.pug

block variables
    - var PageID = 'index'

block title
    title Jobbox Dashboard - Job Portal HTML Template 

block header
    include ../components/header.pug

block content
    .box-heading
        .box-title 
            h3.mb-35 Dashboard
        .box-breadcrumb 
            .breadcrumbs
                ul 
                    li 
                        a.icon-home(href='index.html') Admin
                    li
                        span Dashboard
    .row 
        .col-xxl-8.col-xl-7.col-lg-7
            include ../sections/dashboard_sec1.pug 
            include ../sections/dashboard_sec2.pug 
            include ../sections/dashboard_sec3.pug
        .col-xxl-4.col-xl-5.col-lg-5
            include ../sections/dashboard_sec4.pug
            include ../sections/dashboard_sec5.pug
            include ../sections/dashboard_sec6.pug

    .mt-10
        include ../sections/dashboard_sec7.pug

block scripts-custom 
    script(src='assets/js/plugins/charts/index.js')
